<div class="stats">
  <%= link_to following_user_path(@user), class: "follow" do %>
    <strong id="following" class="stat">
      <%= @user.following.count %>
    </strong>
    <%= t "users.following" %>
  <% end %>
  <%= link_to followers_user_path(@user), class: "follow" do %>
    <strong id="followers" class="stat">
      <%= @user.followers.count %>
    </strong>
    <%= t "users.followers" %>
  <% end %>
</div>
