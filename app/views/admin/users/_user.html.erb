<tr>
										<td>
                      <%= link_to admin_user_path(user) do %>
                      <%= image_tag(user.gravatar_url, size: 28, class: "rounded-circle m-r-5") %>
                      <%= user.name %>
                      <% end %>
                    </td>
										<td><%= user.address %></td>
										<td><%= user.email %></td>
                      <%= form_for [:admin, user], class: "form-horizontal form-label-left" do |f| %>
                        <div class="form-group">
                          <td>
													<% unless user.admin? %>
                          <%= f.select :role, role_choice, {selected: user.role}, class: "form-control col-sm-6 pull-left" %>
													<%= f.submit "Change", class: "btn btn-primary col-sm-6" %>
													<% else %>
													<%= f.text_field :role, value: user.role, readonly: true, class: "form-control" %>
													<% end %>
                          </td>
                        </div>
                      <% end %>
										<td class="text-right">
											<div class="dropdown dropdown-action">
												<a href="#" class="action-icon dropdown-toggle" data-toggle="dropdown" aria-expanded="false"><i class="fa fa-ellipsis-v"></i></a>
												<div class="dropdown-menu dropdown-menu-right">
													<a class="dropdown-item" href="edit-patient.html"><i class="fa fa-pencil m-r-5"></i> Edit</a>
													<a class="dropdown-item" href="#" data-toggle="modal" data-target="#delete_patient-<%= user.id %>"><i class="fa fa-trash-o m-r-5"></i> Delete</a>
												</div>
											</div>
										</td>
									</tr>

<div id="delete_patient-<%= user.id %>" class="modal fade delete-modal" role="dialog">
			<div class="modal-dialog modal-dialog-centered">
				<div class="modal-content">
					<div class="modal-body text-center">
						<h3>Are you sure want to delete this User?</h3>
						<div class="m-t-20"> <a href="#" class="btn btn-white" data-dismiss="modal">Close</a>
							<%= link_to "Delete", admin_user_path(user),method: :delete, class: "btn btn-danger" %>
						</div>
					</div>
				</div>
			</div>

		</div>
