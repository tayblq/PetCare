<div class="main-content account-content">
        <div class="content">
            <div class="container">
                <div class="account-box">
                    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                        <div class="account-title">
                            <h3><%= t "layouts.header.login" %></h3>
                        </div>
                        <div class="form-group">
                            <label><%= t "app.login" %></label>
                            <%= f.text_field :login, class: "form-control", placeholder: t("app.login") %>
                        </div>
                        <div class="form-group">
                            <label><%= t("users.new.password") %></label>
                            <%= f.password_field :password, class: "form-control", placeholder: t("users.new.password") %>
                        </div>
                        <div class="form-group text-right">
                            <% if devise_mapping.rememberable? -%>
                              <%= f.check_box :remember_me %>
                                  <i class="material-icons" style="padding-left: 10px"><%= t ".remember_me" %></i>
                            <% end -%>
                        </div>
                        <div class="form-group text-center">
                            <%= f.submit t("layouts.header.login"), class: "btn btn-primary account-btn" %>
                        </div>
                        <div class="text-center register-link">
                            <%= render "devise/shared/links" %>
                        </div>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
