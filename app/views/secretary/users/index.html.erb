<% provide :title, t("users.index") %>
<div class="page-wrapper">
  <div class="content">
    <div class="row">
      <%= render 'layouts/secretary/flash' %>
        <div class="col-sm-4 col-3">
            <h4 class="page-title"><%= t "users.index" %></h4>
        </div>
    </div>

    <div class="row">
      <div class="col-md-12">
        <div class="table-responsive">
          <div>
            <%= t "export.download" %>
            <%= link_to t("export.csv"), secretary_users_path(format: "csv", search: params[:search]) %> |
            <%= link_to t("export.excel"), secretary_users_path(format: "xls", search: params[:search]) %>
          </div>
          <table id="example" class="table table-striped table-bordered dt-responsive nowrap" cellspacing="0" width="100%">
            <thead>
              <tr>
                <th>#</th>
                <th><%= t "users.new.name" %></th>
                <th><%= t "sessions.new.email" %></th>
              </tr>
            </thead>
            <tbody>
            <% @users.each_with_index do |user, i| %>
              <tr>
  <td><%= i + 1 %></td>
  <td><%= link_to user.name, secretary_user_path(user) %></td>
  <td><%= user.email %></td>
</tr>
<% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
 <script>
		$(document).ready(function() {
    $('#example').DataTable({
responsive: true
    });
} );
	</script>
