<!DOCTYPE html>
<html>
  <head>
    <title><%= full_title yield :page_title %></title>
    <%= render "layouts/secretary/default" %>
  </head>
  <body>
    <div class="main-wrapper">
        <%= render "layouts/secretary/header" %>
        <%= render "layouts/secretary/menu" %>
        <%= yield %>
    </div>
    <% unless flash.empty? %>
      <script type="text/javascript">
          <% flash.each do |f| %>
          <% type = f[0].to_s.gsub('alert', 'error').gsub('notice', 'info') %>
        toastr['<%= type %>']('<%= f[1] %>');
          <% end %>
      </script>
    <% end %>
  </body>
</html>
